<!DOCTYPE html>
<html>
<head>
  <title>WtMarkup</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
</head>

<body>


<div class="container">

  <div class="navbar navbar-default header-upper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
          <div class="logo">
            <%= link_to((image_tag "logo.png"), root_url) %>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-3 col-xs-12">
          <div class="country-info">
            <ul>
              <li class="country"><a href="#">Bangladesh</a></li>
              <li>|</li>
              <li class="language">
                <div class="btn-group">
                  <button class="btn dropdown-toggle" data-toggle="dropdown">En<span class="double-caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <li><a href="#">En</a></li>
                    <li><a href="#">Bn</a></li>
                  </ul>
                </div>
              </li>
              <li>|</li>
              <li class="currency"><a href="#">BDT</a></li>
            </ul>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-3 col-xs-12">
          <div class="user-links">
            <div class="btn-group">
              <ul>
                <li class="flight">
                  <div class="btn-group">
                    <button class="btn dropdown-toggle" data-toggle="dropdown">Flight<span class="double-caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                      <li><a href="#">Flight1</a></li>
                      <li><a href="#">Flight2</a></li>
                    </ul>
                  </div>
                </li>
                <li>|</li>
                <li class="country"><a href="#">Login</a></li>
                <li>|</li>
                <li class="currency"><a href="#">Register</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>

    </div>
    <!--/.container-fluid -->
  </div>

  <!-- Static navbar -->
  <div class="navbar navbar-default header-lower" role="navigation">
    <div class="container-fluid  search-bar">
      <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="in">
            <div class="location">
              London, Heathrow (LHR)
            </div>
            <div class="date"><input type="text" id="datepicker-in" value="<%= Time.now.strftime("%d %b, %y") %>"></div>
          </div>
        </div>
        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-12">
          <div class="flight-ways">
            <a href="#"></a>

            <div class='popbox'>
              <a class='pop-open' href='#'><%= image_tag('flight-1way.png') %> <span class="double-caret"></span> </a>

              <div class='drop-collapse'>
                <div class='box'>
                  <div class='arrow'></div>
                  <div class='arrow-border'></div>
                  <div class="row flight-options">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                      <div class="oneway">
                        <input type="radio"/><%= image_tag('flight-1way.png') %>
                      </div>
                      <div class="twoway">
                        <input type="radio"/><%= image_tag('flight-1way.png') %>
                      </div>
                      <div class="pair-oneway">
                        <input type="radio"/><%= image_tag('flight-1way.png') %>
                      </div>
                    </div>
                  </div>
                  <div class="row flight-classes">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                      <div class="row"><input type="radio"/><label> Economy </label></div>
                      <div class="row"><input type="radio"/><label> Premium Economy </label></div>
                      <div class="row"><input type="radio"/><label> Business </label></div>
                      <div class="row"><input type="radio"/><label> First </label></div>
                    </div>
                  </div>

                  <!--<a href="#" class="close">close</a>-->
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
          <div class="out">
            <div class="location">
              London, Heathrow (LHR)
            </div>
            <div class="date">
              <input type="text" id="datepicker-out" value="<%= (Time.now+1.day).strftime("%d %b, %y") %>"></div>
          </div>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
          <div class="attendance">
            <select>
              <option>2 Adults + 2 Children</option>
              <option>1 Adults + 2 Children</option>
              <option>1 Adults + 1 Children</option>
            </select>
          </div>
        </div>
        <div class="col-lg-1 col-md-1col-sm-1 col-xs-12">
          <div class="search">
            <button class="btn btn-default" type="submit">Search</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="page-content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-10 col-md-9 col-sm-12 col-xs-12">
            <%= yield %>
          </div>
          <div class="col-lg-2 col-md-3 hidden-sm hidden-xs">
            <div class="align-right">
              <div class="advertisement">
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
</div>
</body>
</html>
